{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "buildCommand": "npm run build",
    "watchPatterns": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"]
  },
  "deploy": {
    "startCommand": "npm start",
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 100,
    "restartPolicyType": "always"
  }
} 